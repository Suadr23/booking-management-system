{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,

    "sourceMap": true,
    "declaration": true
  },
  "include": ["src"]
}
